<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="@color/white">


    <TextView
        android:id="@+id/job_companyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Company Name...."
        android:textColor="@color/bluehead"
        android:drawableLeft="@drawable/ic_vcompany"
        android:drawablePadding="2dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>




    <TextView
        android:id="@+id/job_description"
        android:layout_below="@+id/job_companyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Description"
        android:textColor="#212121"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>



    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Location"
        android:textColor="#616161"
        android:drawableLeft="@drawable/ic_vloc"
        android:drawablePadding="2dp"
        android:id="@+id/job_location"
        android:layout_below="@+id/job_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>

    <TextView
        android:id="@+id/job_salary"
        android:layout_below="@+id/job_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Salary"
        android:textColor="#212121"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>

    <TextView
        android:id="@+id/job_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job_salary"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@drawable/phone"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="Contact No"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>